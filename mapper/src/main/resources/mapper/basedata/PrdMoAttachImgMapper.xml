<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fenglei.mapper.prd.PrdMoAttachImgMapper">

    <resultMap id="moAttachImgMap" type="com.fenglei.model.prd.entity.PrdMoAttachImg">
        <result property="id" column="id"></result>
        <result property="pid" column="pid"></result>

        <result property="attachId" column="attach_id"></result>

        <association property="sysFile" javaType="com.fenglei.model.system.entity.SysFiles">
            <result property="id" column="file_id"></result>
            <result property="fileName" column="file_name"></result>
            <result property="url" column="url"></result>
            <result property="size" column="size"></result>
            <result property="fileType" column="file_type"></result>
            <result property="disableDownload" column="disable_download"></result>
            <result property="alias" column="alias"></result>
            <result property="remark" column="remark"></result>
        </association>
    </resultMap>

    <select id="getList" resultMap="moAttachImgMap">
        SELECT pmai.*, sf.id as file_id, sf.file_name, sf.url, sf.size, sf.file_type
             , sf.disable_download, sf.alias, sf.remark
        FROM prd_mo_attach_img pmai
            LEFT JOIN prd_mo pm ON pmai.pid = pm.id
            LEFT JOIN sys_files sf ON pmai.attach_id = sf.id
        <where>
            <if test="prdMoAttachImg.pids != null and prdMoAttachImg.pids.size > 0">
                and pmai.pid in
                <foreach collection="prdMoAttachImg.pids" item="pid" index="index" open="(" separator="," close=")">
                    #{ pid }
                </foreach>
            </if>
            <if test="prdMoAttachImg.pid != null and prdMoAttachImg.pid != ''">
                and pmai.pid = #{ prdMoAttachImg.pid }
            </if>
        </where>
    </select>
</mapper>
