@RestController
#else
@Controller
#end
@RequestMapping("/api.admin/v1#if(${package.ModuleName})/${package.ModuleName}#end/#if(${controllerMappingHyphenStyle})${controllerMappingHyphen}#else${table.entityPath}#end")
@AllArgsConstructor
@Slf4j
