        return Result.success(result);
    }

    @ApiOperation(value = "$!{table.comment}详细信息")
    @GetMapping("/detail/{id}")
    public Result<${entity}> detail(@PathVariable String id) {
        ${entity} result = ${table.entityPath}Service.detail(id);
        return Result.success(result);
    }
}
